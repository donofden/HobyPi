# Copy this file to .env and adjust values as needed.

# Friendly identifier used by the UI and logs.
PI_CAMERA_NAME=lab-cam

# Camera selection (picamera2 is currently supported).
PI_CAMERA_TYPE=picamera2
# Either camera index (0) or a /dev/video path.
PI_CAMERA_DEVICE=/dev/video0
# Optional sensor identifier if multiple modules are attached.
# PI_CAMERA_SENSOR_ID=

# Stream configuration
PI_CAMERA_WIDTH=1280
PI_CAMERA_HEIGHT=720
PI_CAMERA_FPS=30
PI_CAMERA_QUALITY=80
PI_CAMERA_HFLIP=false
PI_CAMERA_VFLIP=false

# Enable/disable features
PI_CAMERA_ENABLE_STREAM=true
PI_CAMERA_ENABLE_SNAPSHOTS=true
PI_CAMERA_ENABLE_RECORDING=true

# Storage locations (relative paths resolve against lab/pi-camera2)
PI_CAMERA_STORAGE_ROOT=./storage
PI_CAMERA_SNAPSHOT_DIR=./storage/snapshots
PI_CAMERA_VIDEO_DIR=./storage/videos

# File naming
PI_CAMERA_SNAPSHOT_PREFIX=snap
PI_CAMERA_SNAPSHOT_EXTENSION=jpg
PI_CAMERA_VIDEO_PREFIX=rec
PI_CAMERA_VIDEO_EXTENSION=mp4

# Recording bitrate override (bits per second). Leave unset for auto.
# PI_CAMERA_RECORD_BITRATE=6000000

# Behaviour toggles
PI_CAMERA_AUTO_START_STREAM=true
PI_CAMERA_AUTO_FREE_CAMERA=true
PI_CAMERA_MANAGE_PIPEWIRE=true
PI_CAMERA_LOG_SIZE=400

# FastAPI host/port
PI_CAMERA_HOST=0.0.0.0
PI_CAMERA_PORT=8001

# MJPEG boundary token; change only if you know why.
PI_CAMERA_MJPEG_BOUNDARY=FRAME
